{
  "name": "@thaitype/minimal-typescript-node-esm-starter",
  "version": "1.0.0",
  "description": "minimal-typescript-node-esm-starter",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "default": "./dist/main.cjs"
    }
  },
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "test:coverage": "cross-env NODE_OPTIONS='--loader=tsx --no-warnings=ExperimentalWarning' c8 ava",
    "test": "cross-env NODE_OPTIONS='--loader=tsx --no-warnings=ExperimentalWarning' ava",
    "test:watch": "cross-env NODE_OPTIONS='--loader=tsx --no-warnings=ExperimentalWarning' ava --watch",
    "build": "tsup src/main.ts --dts --format esm,cjs",
    "lint": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "devDependencies": {
    "ava": "^6.0.1",
    "c8": "^9.0.0",
    "cross-env": "^7.0.3",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  }
}